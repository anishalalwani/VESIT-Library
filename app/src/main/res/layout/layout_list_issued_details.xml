<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card3"
    android:background="#CFD8DC"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.0dip"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:padding="1.0dip"
            android:layout_width="fill_parent"
            android:layout_height="23.0dip"
            android:weightSum="1">

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:paddingLeft="20.0dip"
                android:paddingTop="5dp"
                android:paddingRight="16.0dip"
                android:textColor="#505050"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_gravity="start|center"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:text="Book Title"
                android:layout_weight="0.05" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bugs"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:layout_marginTop="-5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp">

            <ImageView
                android:id="@+id/icon_infofg1"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                app:srcCompat="@drawable/dictionary" />

            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="8.0dip"
                android:paddingBottom="8.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32.0dip">


                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:id="@+id/name"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:padding="1.0dip"
            android:layout_width="fill_parent"
            android:layout_height="23.0dip">

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:paddingLeft="20.0dip"
                android:paddingTop="5dp"
                android:paddingRight="16.0dip"
                android:textColor="#505050"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_gravity="start|center"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:text="Issued Date"
                android:layout_weight="0.05" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bugs2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:layout_marginTop="-5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp">

            <ImageView
                android:id="@+id/icon_infofg12"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                app:srcCompat="@drawable/clock" />

            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="8.0dip"
                android:paddingBottom="8.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32.0dip">


                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:id="@+id/date1"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:padding="1.0dip"
            android:layout_width="fill_parent"
            android:layout_height="23.0dip">

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:paddingLeft="20.0dip"
                android:paddingTop="5dp"
                android:paddingRight="16.0dip"
                android:textColor="#505050"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_gravity="start|center"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:text="Return Date"
                android:layout_weight="0.05" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bugs3"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:layout_marginTop="-5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp">

            <ImageView
                android:id="@+id/icon_infofg13"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                app:srcCompat="@drawable/disclaimer" />

            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="8.0dip"
                android:paddingBottom="8.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32.0dip">


                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:id="@+id/date2"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>