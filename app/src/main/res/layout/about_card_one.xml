<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.0dip">

        <LinearLayout
            android:orientation="horizontal"
            android:padding="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="90.0dip"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="45.0dip"
                android:layout_height="45.0dip"
                android:src="@drawable/l"
                tools:ignore="ContentDescription" />

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_gravity="center_vertical"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vesit Library"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="7dp"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:minHeight="48dp">

            <ImageView
                android:id="@+id/icon_info"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:src="@drawable/information_outline"
                tools:ignore="ContentDescription,VectorDrawableCompat" />

            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="8.0dip"
                android:paddingBottom="8.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32.0dip"
                tools:ignore="RtlHardcoded">

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/version" />

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:id="@+id/app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0-Beta Ver."
                    tools:ignore="HardcodedText" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rate"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp">

            <ImageView
                android:id="@+id/icon_info78"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:src="@drawable/star"
                tools:ignore="ContentDescription,VectorDrawableCompat" />

            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="8.0dip"
                android:paddingBottom="8.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32.0dip"
                tools:ignore="RtlHardcoded">

                <TextView
                    android:id="@+id/ratetit"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text= "Rate Us"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/ratedes"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/if_you_like_the_app_please_do_rate_it" />



            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/changelog"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp">

            <ImageView
                android:id="@+id/icon_changelog"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:src="@drawable/clock"
                tools:ignore="ContentDescription,VectorDrawableCompat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/textView3"
                android:weightSum="1"
                tools:ignore="ObsoleteLayoutParam">

                <Button
                    android:id="@+id/buttongp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Log"
                    android:gravity="left|center_vertical"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:paddingLeft="33dip"
                    android:layout_gravity="start"
                    android:background="@android:color/transparent"
                    android:foreground="?android:attr/selectableItemBackground"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/licenses"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp">


            <ImageView
                android:id="@+id/icon_changelog1"
                android:layout_width="23.0dip"
                android:layout_height="24.0dip"
                android:src="@drawable/dictionary"
                tools:ignore="ContentDescription,VectorDrawableCompat" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/textView3"
                android:weightSum="1"
                tools:ignore="ObsoleteLayoutParam">

                <Button
                    android:id="@+id/buttongp11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notice"
                    android:gravity="left|center_vertical"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:paddingLeft="33dip"
                    android:layout_gravity="start"
                    android:background="@android:color/transparent"
                    android:foreground="?android:attr/selectableItemBackground"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
                </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>