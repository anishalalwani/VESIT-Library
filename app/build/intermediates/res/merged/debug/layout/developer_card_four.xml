<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:screenOrientation="portrait"
    android:layout_margin="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/holder_relative_layout"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/events1"
            android:layout_gravity="top"
            android:layout_marginTop="-85dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"/>

        <vesitlibrary.pavankumar.camp.VESITLibrary.RoundedImageView
            android:id="@+id/ll"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginTop="23dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/dev44"
            android:orientation="horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll"
            android:text="@string/mayuri_kate"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_marginTop="5dp"
            android:id="@+id/textView2"
            android:textColor="#5262a5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            android:textStyle="italic"
            android:text="@string/computer_department"
            android:gravity="center"
            android:textSize="14sp"
            android:id="@+id/textView4"
            android:textColor="#109978" />




    </RelativeLayout>
</android.support.v7.widget.CardView>